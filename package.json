{
  "name": "employee-leave-management",
  "version": "1.0.0",
  "description": "Full-stack Employee Leave Management System with React, Node.js, Express, and MongoDB",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install --prefix backend && npm install --prefix frontend",
    "backend": "npm run dev --prefix backend",
    "frontend": "npm start --prefix frontend",
    "seed": "npm run seed --prefix backend",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "build": "npm run build --prefix frontend"
  },
  "keywords": [
    "leave-management",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "tailwind"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
